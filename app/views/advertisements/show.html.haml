.container
  .row
    .col-12
      .account-wall
        .d-flex.flex-row.bd-highlight
          - @ad.images.each do |image|
            .p-2.bd-highlight
              = cl_image_tag image.key, crop: "fill", class: 'img-fluid img-show'
        .row
          .col-md-auto.m-2
            %h2.text-start= @ad.name
        .row
          .col-md-auto.m-2
            %h5= @ad.description
        - unless @ad.tag_list.empty?
          .row
            .col-md-auto.m-2
              %h6.text-decoration-underline Tags:
              - @ad.tag_list.each do |tag|
                %span.badge.bg-primary= tag
        .row.m-2
          .col.text-end.text-muted
            Published
            = @ad.updated_at.localtime.strftime '%Y-%m-%d %H:%M'
